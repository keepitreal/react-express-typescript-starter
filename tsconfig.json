{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES5",
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "jsx": "react"
    },
    "filesGlob": [
        "app/src/**/*.ts",
        "app/src/**/*.tsx",
        "server/**/*.ts",
        "typings/tsd.d.ts"
    ],
    "files": [
        "typings/tsd.d.ts",
        "app/src/components/home/main.tsx",
        "app/src/main.tsx",
        "server/server.ts"
    ]
}